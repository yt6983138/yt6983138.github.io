@using Blazorise.QRCode

@page "/PhigrosTokenGetter/index.html"

<div id="LoginMain">
	<QRCode Value="@(!LoginUrl.Contains("http") ? "" : LoginUrl)" Alt="@QRCodeAlt" id="QRCodeImage"></QRCode>
	<div id="LoginInfo">
		@if (ExpiresAt != default) 
		{
			<span>Login url: </span>
			<a href="@LoginUrl" target="_blank" style="pointer-events: @(LoginUrl.Contains("taptap") ? "auto" : "none")">@LoginUrl<br/></a>
			<span>Expires at: @ExpiresAt.ToString(), in @ExpiresInSeconds seconds.</span>
		}
	</div>
	<div id="BottomControl">
		<div id="TokenInfo">
			<p>
				Your token:
			</p>
			<textarea id="Token" readonly>@Token</textarea>
		</div>
		<div id="RegenerateBox">
			<button id="Regenerate" @onclick=Regenerate>Regenerate</button>
		</div>
	</div>
</div>
